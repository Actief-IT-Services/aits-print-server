# AITS Print Server Configuration
# Copy this file to config.yaml and adjust settings as needed

server:
  # Server host and port
  host: 0.0.0.0      # 0.0.0.0 = listen on all interfaces, 127.0.0.1 = localhost only
  port: 8888         # Port to listen on
  debug: false       # Enable debug mode (do not use in production)

# SSL/HTTPS Configuration (optional)
ssl:
  enabled: false     # Set to true to enable HTTPS
  cert_file: certs/server.crt   # Path to SSL certificate
  key_file: certs/server.key    # Path to SSL private key
  # To generate a self-signed certificate, run: python generate_ssl_cert.py

printing:
  # Default printer (null = use system default)
  default_printer: null
  
  # Temporary directory for PDF files
  temp_dir: /tmp
  
  # Auto-cleanup temporary files after printing
  auto_cleanup: true
  
  # Maximum file size in MB
  max_file_size: 50

logging:
  # Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
  level: INFO
  
  # Log file path (null = console only)
  file: server.log
  
  # Maximum log file size in MB
  max_size: 10
  
  # Number of backup log files to keep
  backup_count: 5

security:
  # API key for authenticating requests TO this print server
  api_key: your-secret-key-here
  
  # Allowed IP addresses (empty = allow all)
  # allowed_ips:
  #   - 127.0.0.1
  #   - 192.168.1.0/24
  
  # CORS origins (empty = allow all)
  # cors_origins:
  #   - http://localhost:8069
  #   - https://your-odoo-domain.com

# Printer Auto-Configuration (Linux/CUPS only)
# Define printers to be automatically added to CUPS on server startup
# Printers already existing in CUPS will be skipped
printers:
  # Example: Network printer via IPP (AirPrint/driverless)
  # - name: Office_Printer
  #   uri: ipp://192.168.1.100/ipp/print
  #   driver: everywhere      # 'everywhere' = driverless IPP, 'raw' = no processing
  #   description: Main office printer
  #   location: Building A, Floor 1
  #   default: true           # Set as system default printer
  
  # Example: Label printer via raw socket (JetDirect/port 9100)
  # - name: Zebra_Labels
  #   uri: socket://192.168.1.101:9100
  #   driver: raw
  #   description: Zebra ZD420
  #   location: Warehouse
  
  # Example: Printer with specific PPD driver
  # - name: HP_LaserJet
  #   uri: socket://192.168.1.102:9100
  #   driver: drv:///hp/hpcups.drv/hp-laserjet_pro_m404-m405-ps.ppd
  #   description: HP LaserJet Pro M404

# Odoo Connection Configuration
# Used when print server needs to connect TO Odoo (cloud/Odoo.sh scenarios)
# The print server will poll Odoo for pending print jobs
odoo:
  enabled: false                           # Enable Odoo polling
  url: https://your-company.odoo.com       # Your Odoo instance URL
  database: your-database                  # Odoo database name
  api_key: your-odoo-api-key              # API key generated in Odoo
  poll_interval: 5                         # How often to poll (seconds)
  
  # Server identification (used when registering with Odoo)
  server_name: Office Print Server         # Friendly name for this server
  location: Main Office                    # Optional location description
